<!DOCTYPE html>

<head>

</head>

<body>
    <h1> todo / <%= title %></h1>

    <ul>
        <% if(user){ %>
            <li>
                <%= user.name %>
            </li>
            <li>
                <a href="/users/sign-out">Sign out</a>
            </li>
            <% }else {%>
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
                <% } %>
    </ul>
    <p>
        <%= user.name %>
    </p>

    <p>
        <%= user.email %>
    </p>


        <h4>Posts</h4>

        <form action="/posts/create"  method="POST">
            <textarea name="content" cols="30" rows="3"></textarea>
            <input type="submit" value="Post">
        </form>
        <div>
            <ul>
                <% for(post of posts){%>
                <li>
                    <%= post.content %>
                </li>
                <small>
                    <%= post.user.name%>
                </small>
                <% }%>
            </ul>
        </div>
</body>

</html>