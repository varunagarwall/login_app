<!DOCTYPE html>

<head>

</head>

<body>
    <h1> todo / <%= title %>
    </h1>

    <ul>
        <% if(user){ %>
            <li>
                <%= user.name %>
            </li>
            <li>
                <a href="/users/sign-out">Sign out</a>
            </li>
            <% }else {%>
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
                <% } %>
    </ul>
    <p>
        <%= user.name %>
    </p>

    <p>
        <%= user.email %>
    </p>

    <div>
        <h4>Posts</h4>

        <form action="/posts/create" method="POST">
            <textarea name="content" cols="30" rows="3"></textarea>
            <input type="submit" value="Post">

        </form>
        <ul>
            <% for(post of posts){%>
                <li>
                    <p>

                        <%= post.content %>
                            <br>
                            <small>
                                <%= post.user.name%>
                            </small>

                    </p>

                    <form action="/comments/create" method="POST">
                        <textarea name="content" cols="30" rows="3" placeholder="add comment here"></textarea>
                        <input type="hidden" name="post" value="<%= post._id %>">
                        <input type="submit" value="Add comment">
                    </form>
                    <div>
                        <ul id="post-comments-<%= post._id %>">
                            <% for (comment of post.comments){ %>
                                <p>
                                    <%= comment.content%>

                                        <br>
                                        <small>
                                            <%= comment.user.name %>
                                        </small>
                                        <% }%>
                                </p>
                        </ul>
                </li>

                <%} %>
        </ul>
    </div>
</body>

</html>